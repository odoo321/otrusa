<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_auto_reconciliation_tree" model="ir.ui.view">
        <field name="name">auto.reconciliation.tree</field>
        <field name="model">auto.reconciliation</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Auto Reconciliation">
                <field name="transaction_id"/>
                <field name="partner_id"/>
                <field name="payment_id"/>
                <field name="amount"/>
                <field name="matched_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_auto_reconciliation_form" model="ir.ui.view">
        <field name="name">auto.reconciliation.form</field>
        <field name="model">auto.reconciliation</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Auto Reconciliation">
                <header>
                    <button name="action_validate" string="Validate" type="object" class="oe_highlight" states="matched"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="transaction_id"/>
                        <field name="partner_id"/>
                        <field name="payment_id"/>
                        <field name="amount"/>
                        <field name="x_sb_wo_n" />
                        <field name="x_qb" />
                    </group>
                    <notebook>
                        <page string="Matching Invoices" name="matching_invoices">
                            <field name="invoice_ids">
                                <tree>
                                    <field name="partner_id" groups="base.group_user" string="Customer"/>
                                    <field name="date_invoice"/>
                                    <field name="number"/>
                                    <field name="user_id"/>
                                    <field name="date_due"/>
                                    <field name="origin"/>
                                    <field name="amount_total_signed" string="Total" />
                                    <field name="state"/>
                                    <field name="type" invisible="context.get('type',True)"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group col="4">
                        <field name="matched_date" />
                        <field name="total_amount" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_auto_reconciliation_search" model="ir.ui.view">
        <field name="name">auto.reconciliation.search</field>
        <field name="model">auto.reconciliation</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search string="Auto Reconciliation">
                <field name="transaction_id"/>
                <newline/>
            </search>
        </field>
    </record>

    <record id="act_open_auto_reconciliation_view" model="ir.actions.act_window">
        <field name="name">Auto Reconciliations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">auto.reconciliation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_auto_reconciliation_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="act_open_auto_reconciliation_view_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="act_open_auto_reconciliation_view"/>
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_auto_reconciliation_form"/>
    </record>

    <record id="act_open_auto_reconciliation_view_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="act_open_auto_reconciliation_view"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_auto_reconciliation_tree"/>
    </record>

    <menuitem id='auto_reconciliation_menu'
              action='act_open_auto_reconciliation_view'
              parent='payment.root_payment_menu'
              sequence='60'/>

</odoo>
